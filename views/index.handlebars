<main class="container">

  <div id="banner" class="row">

    <div class="entry">
      {{#if loggedIn}}
      <div class="col s12 m6">
        <h3>Your Recommendations:</h3>

        <ol>
          {{#each books}}
          <li>{{title}} by {{author}}</li>
          {{/each}}
        </ol>
      </div>


      {{else}}

      <div class="col s12 offset-m6 m6 blue lighten-5 center">
        <h3>Sign up now!</h3>

        <div class="row">
          <div class="input-field col s12">
            <input placeholder="What do you want to be called?" id="screen_name" type="text" class="validate">
            <label for="screen_name">Screen Name</label>
          </div>
          <div class="input-field col s12">
            <input id="email" type="email" class="validate">
            <label for="email">Email</label>
          </div>
          <div class="input-field col s12">
            <input id="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>

          <button class="btn green">Sign Up</button>
        </div>

      </div>


      {{/if}}
    </div>
  </div>

  <div id="search" class="row yellow lighten-4">
    <form id="bookForm">
      <div class="input-field col s6 offset-s3">
        <input id="search_bar" type="search">
        <label for="search_bar"><i class="material-icons">search</i> Search by Title, Author, or Genre</label>
        <i class="material-icons">close</i>
      </div>
    </form>
  </div>

  <div class="row">
    <div class="col s12">
      <ul class="collapsible" id="search_results">
        <li class="search_book">
          <div class="collapsible-header"><i class="material-icons">library_books
            </i>Submit a query to get some books.</div>
          <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
        </li>
      </ul>
    </div>
  </div>
</main>